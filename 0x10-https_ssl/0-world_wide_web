#!/usr/bin/env bash
# This script displays information about subdomains of a given domain.

display_info() {
    local domain="$1"
    local subdomain="$2"
    
    dig_output=$(dig "${subdomain}.${domain}" | grep -A1 'ANSWER SECTION:')
    record_type=$(echo "$dig_output" | awk '/IN\s+[A-Z]+/ {print $4}')
    destination=$(echo "$dig_output" | awk '/[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+/ {print $5}')
    
    echo "The subdomain ${subdomain} is a ${record_type} record and points to ${destination}"
}

if [ $# -eq 2 ]; then
    domain="$1"
    subdomain="$2"
    display_info "$domain" "$subdomain"
elif [ $# -eq 1 ]; then
    domain="$1"
    # Display information for default subdomains
    display_info "$domain" "www"
    display_info "$domain" "lb-01"
    display_info "$domain" "web-01"
    display_info "$domain" "web-02"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
